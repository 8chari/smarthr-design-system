{
  "filters": {
    "comments": true,
    "allowlist": {
      "allow": [
        "/<a(?: .+?)?>.*?</a>/",
        "ウィンドウ",
        "ダイアログ",
        "モーダル"
      ]
    }
  },
  "rules": {
    "preset-smarthr": {
      "ja-no-mixed-period": false,
      "sentence-length": false,
      "ja-space-between-half-and-full-width": false,
      "ja-no-space-around-parentheses": false,
      "prh": {
        "rulePaths": [
          "./dict/prh-books.yml"
        ]
      }
    }
  },
  "plugins": {
    "@textlint/markdown": {
      "extensions": [
        ".mdx"
      ]
    }
  }
}
